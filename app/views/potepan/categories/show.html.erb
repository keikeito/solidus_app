<%= provide(:title, @taxon.name) %>
<!-- LIGHT SECTION -->
<%= render 'potepan/shared/light_section', {pageHeader_title: @taxon, taxon: @taxon} %>
<!-- MAIN CONTENT SECTION -->
<section class="mainContent clearfix productsContent">
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-sm-4 col-xs-12 sideBar">
        <%= render 'potepan/shared/categories', taxonomies: @taxonomies %>
        <%= render 'potepan/shared/price_range_filter' %>
        <%= render 'potepan/shared/color_filter' %>
        <%= render 'potepan/shared/size_filter' %>
      </div>
      <div class="col-md-9 col-sm-8 col-xs-12">
        <%= render 'potepan/shared/products_sort_filter' %>
        <div class="row <%= params[:layout] == "list" ? "productListSingle" : "" %>">
          <%= render partial: 'potepan/shared/product', collection: @products %>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render 'layouts/partners_logo_slider'%>
